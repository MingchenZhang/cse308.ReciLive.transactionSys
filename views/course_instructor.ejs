<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="google-signin-client_id"
          content="42088802485-n1mb2q3d8gigkqoth61ca07nfthgk9hr.apps.googleusercontent.com">
    <title>ReciLive</title>
    <!-- CSS Library -->
    <link href="static/css/library/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="static/css/library/datepicker.css" rel="stylesheet" type="text/css">
    <link href="http://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css" rel="stylesheet" type="text/css" />
    <!-- JS Library -->
    <script src="static/javascript/library/jquery-3.2.0.min.js"></script>
    <script src="http://code.jquery.com/ui/1.10.2/jquery-ui.js"></script>
    <script src="static/javascript/library/bootstrap.min.js"></script>
    <script src="static/javascript/library/bootstrap-datepicker.js"></script>
    <script src="https://apis.google.com/js/platform.js?onload=onLoad" async defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/2.3.0/mustache.js"></script>
    <!-- Our CSS -->
    <link href="static/css/class.css" rel="stylesheet" type="text/css">
    <!-- Our JS-->
    <script src="static/javascript/authentication.js"></script>
    <script src="static/javascript/class.js"></script>
    <script src="static/javascript/class-generator.js"></script>
    <script src="static/javascript/recitation-generator.js"></script>
    <script src="static/javascript/papaparse.min.js"></script>

</head>

<body>
    <nav class="navbar">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="../static/img/logo/android-icon-48x48.png">
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><div class="sign-in" data-onsuccess="onSignIn"></div></li>
                    <li><a href="#" id="sign-out" onclick="signOut()">Log out</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <button class="add-class" data-toggle="modal" data-target="#class-detail">+</button>
    <button class="add-recitation" data-toggle="modal" data-target="#recitation-detail">+</button>
    <!-- Modal for class -->
    <div id="class-detail" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Class Name: </h4><input class="class-name" type="text" required>
                    <div id="class-date-alert">
                        <strong>Oh snap!</strong>
                    </div>
                    <table>
                        <thead>
                        <tr>
                            <th>
                                Start date
                                <a href="" class="btn small" id="class-date-start" data-date-format="yyyy-mm-dd">Change</a>
                            </th>
                            <th>
                                End date
                                <a href="" class="btn small" id="class-date-end" data-date-format="yyyy-mm-dd">Change</a>
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td id="class-date-start-display"></td>
                            <td id="class-date-end-display"></td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="modal-body">
                    <table>
                        <thead>
                        <tr>
                            <th>Student E-mail</th>
                        </tr>
                        </thead>
                        <tbody class="student-list">
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" onclick="addClass()">Save</button>
                    <label class="btn btn-primary">Bulk Import<input type="file" class="bulk-import-student" style="display: none;" onchange="import_student()"></label>
                    <button type="button" class="btn btn-default" onclick="add_student()">Add</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal for Recitation -->
    <div id="recitation-detail" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Recitation Name: </h4><input class="recitation-name" type="text" required>
                    <div id="rec-date-alert">
                        <strong>Oh snap!</strong>
                    </div>
                    <table>
                        <thead>
                        <tr>
                            <th>
                                Start date
                                <a href="" class="btn small" id="rec-date-start" data-date-format="yyyy-mm-dd">Change</a>
                            </th>
                            <th>
                                End date
                                <a href="" class="btn small" id="rec-date-end" data-date-format="yyyy-mm-dd">Change</a>
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td id="rec-date-start-display"></td>
                            <td id="rec-date-end-display"></td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="modal-body">
                    <table>
                        <thead>
                        <tr>
                            <th>File</th>
                        </tr>
                        </thead>
                        <tbody class="student-list">
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" onclick="addRecitation()">Save</button>
                    <label class="btn btn-primary">Bulk Import<input type="file" class="bulk-import-student" style="display: none;" onchange="import_student()"></label>
                    <form action="<%= blobstoreService.createUploadUrl("/upload") %>" method="post" enctype="multipart/form-data">
                        <input type="file" name="myFile">
                        <input type="submit" value="Upload">
                    </form>
                </div>
            </div>

        </div>
    </div>
    <section class="class-info">
        <h1>Next Class starts in <span>1 hr</span></h1>
        <br>
        <form class="navbar-form" role="search">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </section>
    <section>
        <div class="container-fluid">
            <div class="row class-list">
            </div>
        </div>
    </section>
</body>

</html>
